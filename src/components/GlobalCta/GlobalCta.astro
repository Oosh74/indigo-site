---
import topCorner from "@assets/images/Indigo-Left-Top-Corner-01.svg";
import bottomRightLeaf from "@assets/images/Indigo-Double-Leaf-Right-Bottom-Corner-01.svg";

interface Props {
  title?: string;
  accent?: string;
  description?: string;
  ctaLabel?: string;
  ctaHref?: string;
  sectionClass?: string;
  shellClass?: string;
}

const {
  title = "What's next for your business? Let's find out",
  accent = "together.",
  description = "Call us and we'll review your marketing, show you what's working, what's not, and how we'd move forward.",
  ctaLabel = "Talk to our team",
  ctaHref = "/contact-us/",
  sectionClass = "page-section section-color__dark",
  shellClass = "page-shell",
} = Astro.props;
---

<section
  class={`${sectionClass} global-cta`}
  style={`--global-cta-top-corner: url(${topCorner.src});`}
>
  <div class={`${shellClass} global-cta__wrap`}>
    <div
      class="global-cta__card"
      style={`--global-cta-bottom-corner: url(${bottomRightLeaf.src});`}
    >
      <h2 class="global-cta__title">
        {title}
        <span>{accent}</span>
      </h2>
      <p>{description}</p>
      <a class="cs-button-solid cs-button-solid--arrow" href={ctaHref}
        >{ctaLabel}</a
      >
    </div>
  </div>
</section>

<style lang="less">
  .global-cta {
    position: relative;
    overflow: hidden;
    background-image: var(--global-cta-top-corner);
    background-repeat: no-repeat;
    background-position: top left;
    background-size: cover;
  }

  .global-cta__wrap {
    position: relative;
    z-index: 2;
    padding: 0px var(--space-s) 0px var(--space-s);
  }

  .global-cta__card {
    display: flex;
    flex-direction: column;
    gap: var(--space-3xs);
    align-items: flex-start;
    background: #f4f6fb;
    border-radius: var(--radius-card);
    padding: clamp(1.3rem, 3vw, 2.5rem);
    background-image: var(--global-cta-bottom-corner);
    background-repeat: no-repeat;
    background-position: right bottom;
    background-size: clamp(14rem, 34vw, 30rem);
  }

  .global-cta__title {
    font-size: var(--font-size-h2);
    margin-bottom: var(--space-2xs);
  }
  .global-cta p {
    max-width: 55ch;
  }

  .global-cta__title span {
    color: var(--secondary);
  }

  .global-cta__card .cs-button-solid {
    margin-top: var(--space-m);
    width: fit-content;
  }
</style>
