---
import BaseLayout from "@layouts/BaseLayout.astro";
const services = [
	{
		title: "Web Design & Development",
		text: "Your site should work as hard as you do. We build websites that look sharp, load fast, and turn visitors into customers.",
		link: "/our-services/website-design-development/",
	},
	{
		title: "Creative & Branding",
		text: "Good design gets attention. Great design drives growth. We create logos, materials, and videos that tell your story clearly.",
		link: "/our-services/creative-design-branding/",
	},
	{
		title: "Search Engine Optimization",
		text: "SEO changes constantly. We focus on technical fixes, strong content, and trusted links that build steady growth.",
		link: "/our-services/search-engine-optimization/",
	},
	{
		title: "Digital Marketing",
		text: "Ads only work if they reach the right people. We run campaigns that track every dollar and improve over time.",
		link: "/our-services/digital-marketing/",
	},
	{
		title: "Promo & Print Products",
		text: "Print still makes an impact. We design cards, brochures, and branded items that keep your business top of mind.",
		link: "/our-services/print-promotional-products/",
	},
	{
		title: "Social Media",
		text: "Your audience is online every day. We help you stay visible with purposeful posts, real engagement, and a strong community.",
		link: "/our-services/social-media-management/",
	},
];

const values = ["Super-service", "Integrity", "Quality", "Relationships"];

const stats = [
	{
		number: "15min",
		title: "Average Response Time",
		text: "Most agencies take a day or more to reply. We average 15 minutes so you get answers when you need them.",
	},
	{
		number: "120%",
		title: "Increase in Website Traffic",
		text: "We rebuilt SEO for a local company, fixed technical issues, and traffic more than doubled within a year.",
	},
	{
		number: "150%",
		title: "Increase in Leads from Website",
		text: "A website redesign and targeted ad strategy generated significantly more qualified inbound leads.",
	},
];

const plans = [
	{
		name: "Essential Launch",
		level: "Level One",
		text: "Best for startups and lean businesses looking for affordable marketing solutions.",
		points: ["Branded 5-7 page website", "Foundational SEO", "Flexible and budget-aware setup"],
	},
	{
		name: "Growth Builder",
		level: "Level Two",
		text: "Best for businesses ready to scale and generate leads.",
		points: ["Everything in Level One", "Semi-custom website focused on conversions", "Stronger SEO and lead generation support"],
	},
	{
		name: "Platinum Performance Partner",
		level: "Level Three",
		text: "Best for established businesses looking to scale rapidly and lead their market.",
		points: ["Everything in prior levels", "Fully custom website and advanced integrations", "Strategic, ongoing growth partnership"],
	},
];
---

<BaseLayout
	title="Indigo Business Solutions | Digital Marketing Agency | Long Island, NY"
	description="Full-service marketing agency built on real relationships, fast turnaround, and results. We help businesses grow with tailored solutions and unmatched support."
>
	<section class="hero">
		<div class="shell hero-grid">
			<div class="hero-copy">
				<p class="eyebrow">Long Island Marketing Agency</p>
				<h1>Your Marketing Partner, Minus the Overhead</h1>
				<p>
					Business is challenging, and most marketing agencies make it harder with empty promises and inflated price tags. We keep things clear, transparent, and focused on your success.
				</p>
				<div class="hero-actions">
					<a class="cs-button-solid" href="/contact-us/">Free Evaluation</a>
					<a class="text-link" href="/marketing-quiz/">Take Marketing Quiz</a>
				</div>
				<p class="micro-copy">Trusted by nearly 200 clients in 30+ states, backed by 50+ five-star reviews.</p>
			</div>
			<div class="hero-panel">
				<p>What’s next for your business? Let’s find out together.</p>
				<a href="tel:+16316309845">(631) 630-9845</a>
			</div>
		</div>
	</section>

	<section class="section shell">
		<div class="section-head">
			<p class="eyebrow">Marketing That Grows With You</p>
			<h2>Marketing Services Built Around Your Business</h2>
		</div>
		<div class="card-grid service-grid">
			{
				services.map((service) => (
					<article class="card">
						<h3>{service.title}</h3>
						<p>{service.text}</p>
						<a class="text-link" href={service.link}>Learn more</a>
					</article>
				))
			}
		</div>
	</section>

	<section class="section section-soft">
		<div class="shell two-col">
			<div>
				<p class="eyebrow">About Us</p>
				<h2>Founded On Long Island In 2006, Still Here for Good Reason</h2>
				<p>
					Most agencies force you into their system. We start with a conversation: what’s working, what’s not, and where you want to be. Then we build solutions that fit.
				</p>
				<p>
					Clients stick with us because our strategies adapt as they grow. Whether you need a full rebuild or a few fixes, we meet you where you are and help move you forward.
				</p>
			</div>
			<div class="value-box">
				<h3>What Drives Us Every Day</h3>
				<ul>
					{values.map((value) => <li>{value}</li>)}
				</ul>
			</div>
		</div>
	</section>

	<section class="section shell">
		<div class="section-head">
			<p class="eyebrow">Why Work With Us</p>
			<h2>Most Agencies Sell Dreams. We Solve Problems.</h2>
		</div>
		<div class="card-grid stat-grid">
			{
				stats.map((stat) => (
					<article class="card">
						<p class="stat">{stat.number}</p>
						<h3>{stat.title}</h3>
						<p>{stat.text}</p>
					</article>
				))
			}
		</div>
	</section>

	<section class="section section-soft">
		<div class="shell">
			<div class="section-head">
				<p class="eyebrow">Hear From Our Clients</p>
				<h2>Testimonials</h2>
			</div>
			<div class="card-grid quote-grid">
				<article class="card">
					<p>
						I can’t express enough gratitude to the Indigo team. Great company, great people, great work. I’m a very happy customer.
					</p>
					<p class="quote-author">Kristin - Business Owner</p>
				</div>
				<article class="card">
					<p>
						Working with Matthew and the Indigo team has been an amazing experience. Their creativity and responsiveness make every interaction a pleasure.
					</p>
					<p class="quote-author">Avi - Business Owner</p>
				</article>
				<article class="card">
					<p>
						Prompt, reliable, and consistently high-quality work. Indigo has been an incredible resource for our team.
					</p>
					<p class="quote-author">Michelle - Social Media Director</p>
				</article>
			</div>
		</div>
	</section>

	<section class="section shell">
		<div class="section-head">
			<p class="eyebrow">Marketing Service Options</p>
			<h2>Three Levels, Built for Where You Are Right Now</h2>
		</div>
		<div class="card-grid plan-grid">
			{
				plans.map((plan) => (
					<article class="card plan-card">
						<p class="eyebrow small">{plan.level}</p>
						<h3>{plan.name}</h3>
						<p>{plan.text}</p>
						<ul>
							{plan.points.map((point) => <li>{point}</li>)}
						</ul>
					</article>
				))
			}
		</div>
	</section>

	<section class="section section-soft">
		<div class="shell cta-band">
			<div class="card cta-card">
				<h3>Not sure where to start?</h3>
				<p>Take our 2-minute quiz and get a clear recommendation based on your challenges, budget, and goals.</p>
				<a class="text-link" href="/marketing-quiz/">Take marketing quiz</a>
			</div>
			<div class="card cta-card">
				<h3>What’s next for your business?</h3>
				<p>Call us and we’ll review your marketing, show what’s working, what’s not, and how we’d move forward.</p>
				<a class="text-link" href="/contact-us/">Talk to our team</a>
			</div>
		</div>
	</section>

	<section class="section shell">
		<div class="section-head">
			<p class="eyebrow">Insights to Grow Your Business</p>
			<h2>Marketing Tips, Strategies, and Resources from Our Blog</h2>
		</div>
		<div class="card-grid blog-grid">
			<article class="card">
				<h3>Your Customers Are Using ChatGPT to Find Businesses. Are They Finding You?</h3>
				<a class="text-link" href="/your-customers-are-using-chatgpt-to-find-businesses-are-they-finding-you/">Read more</a>
			</article>
			<article class="card">
				<h3>National Skilled Nursing Care Week</h3>
				<a class="text-link" href="/national-skilled-nursing-care-week/">Read more</a>
			</article>
			<article class="card">
				<h3>SEO for Business Success</h3>
				<a class="text-link" href="/seo-for-business-success/">Read more</a>
			</article>
		</div>
	</section>

	<section class="section section-soft">
		<div class="shell contact-grid">
			<div>
				<p class="eyebrow">Let's Chat</p>
				<h2>Contact Us</h2>
				<p>Give us a call. We’ll listen, share how we’d help, and let you know if we’re the right fit.</p>
				<p><strong>Location</strong><br />2150 Joshuas Path Suite 201, Hauppauge, NY 11788</p>
				<p><strong>Phone</strong><br /><a href="tel:+16316309845">(631) 630-9845</a></p>
			</div>
			<form class="card contact-form" action="/contact-us/" method="get">
				<label>Full Name*<input type="text" name="name" required /></label>
				<label>Email*<input type="email" name="email" required /></label>
				<label>Phone Number*<input type="tel" name="phone" required /></label>
				<label>Business Name*<input type="text" name="business" required /></label>
				<label>How can we help you?<textarea name="message" rows="4"></textarea></label>
				<button class="cs-button-solid" type="submit">Contact Us</button>
			</form>
		</div>
	</section>
</BaseLayout>

<style lang="less">
	.shell {
		width: min(1120px, 94%);
		margin: 0 auto;
	}

	.section {
		padding: clamp(3.5rem, 7vw, 6rem) 0;
	}

	.section-soft {
		background: #f4f6fb;
	}

	.eyebrow {
		font-size: 0.8rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		color: var(--secondary);
		margin-bottom: 0.5rem;
	}

	.eyebrow.small {
		font-size: 0.7rem;
	}

	h1 {
		font-size: clamp(2rem, 5vw, 3.6rem);
		line-height: 1.1;
	}

	h2 {
		font-size: clamp(1.8rem, 3.5vw, 2.7rem);
		line-height: 1.2;
	}

	h3 {
		font-size: 1.2rem;
		margin-bottom: 0.65rem;
	}

	p {
		margin-bottom: 1rem;
	}

	.hero {
		padding: clamp(5.5rem, 8vw, 8rem) 0 3.5rem;
		background: linear-gradient(145deg, #e9efff 0%, #f8fbff 35%, #ffffff 100%);
	}

	.hero-grid {
		display: grid;
		gap: 1.5rem;
	}

	.hero-panel {
		background: var(--secondary);
		color: #fff;
		padding: 1.5rem;
		border-radius: 1rem;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	.hero-panel p {
		color: #d2ddff;
	}

	.hero-panel a {
		color: var(--primary);
		font-size: 1.35rem;
		font-weight: 700;
		text-decoration: none;
	}

	.hero-actions {
		display: flex;
		flex-wrap: wrap;
		gap: 0.9rem;
		margin: 1.25rem 0 0.75rem;
	}

	.text-link {
		color: var(--secondary);
		font-weight: 700;
		text-decoration: none;
	}

	.text-link:hover {
		text-decoration: underline;
	}

	.micro-copy {
		font-size: 0.95rem;
	}

	.section-head {
		max-width: 52rem;
		margin-bottom: 1.5rem;
	}

	.card-grid {
		display: grid;
		gap: 1rem;
	}

	.card {
		background: #fff;
		border: 1px solid #e3e8f5;
		border-radius: 0.9rem;
		padding: 1.1rem;
		box-shadow: 0 8px 24px -22px rgba(0, 31, 63, 0.55);
	}

	.two-col {
		display: grid;
		gap: 1rem;
	}

	.value-box ul,
	.plan-card ul {
		padding-left: 1.2rem;
	}

	.value-box li,
	.plan-card li {
		margin-bottom: 0.5rem;
	}

	.stat {
		font-size: 2rem;
		font-weight: 900;
		color: var(--secondary);
		margin-bottom: 0.25rem;
	}

	.quote-author {
		font-weight: 700;
		margin-bottom: 0;
	}

	.cta-band {
		display: grid;
		gap: 1rem;
	}

	.contact-grid {
		display: grid;
		gap: 1rem;
	}

	.contact-form label {
		display: block;
		font-size: 0.95rem;
		font-weight: 700;
		margin-bottom: 0.8rem;
	}

	.contact-form input,
	.contact-form textarea {
		width: 100%;
		border: 1px solid #c6d1eb;
		border-radius: 0.4rem;
		padding: 0.65rem 0.7rem;
		margin-top: 0.25rem;
	}

	.contact-form button {
		border: 0;
	}

	@media only screen and (min-width: 48rem) {
		.hero-grid {
			grid-template-columns: 1.25fr 0.75fr;
		}

		.service-grid,
		.plan-grid {
			grid-template-columns: repeat(2, minmax(0, 1fr));
		}

		.two-col {
			grid-template-columns: 1.2fr 0.8fr;
		}

		.stat-grid,
		.quote-grid,
		.blog-grid {
			grid-template-columns: repeat(3, minmax(0, 1fr));
		}

		.cta-band {
			grid-template-columns: repeat(2, minmax(0, 1fr));
		}

		.contact-grid {
			grid-template-columns: 0.95fr 1.05fr;
		}
	}

	@media only screen and (min-width: 70rem) {
		.service-grid,
		.plan-grid {
			grid-template-columns: repeat(3, minmax(0, 1fr));
		}
	}
</style>
