---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { Picture } from "astro:assets";
import { formatDate } from "@js/utils";
import heroImg from '../assets/images/indigo-office-background-1.webp'

const services = [
	{
		title: "Web Design & Development",
		text: "Your site should work as hard as you do. We build websites that look sharp, load fast, and turn visitors into customers.",
		link: "/our-services/website-design-development/",
		points: ["Custom Website Design", "E-Commerce & Shopify", "Landing Page Design", "UX/UI Design", "Website & WordPress Development"],
	},
	{
		title: "Creative & Branding",
		text: "Good design gets attention. Great design drives growth. We create logos, materials, and videos that tell your story clearly.",
		link: "/our-services/creative-design-branding/",
		points: ["Logo Design", "Marketing Collateral", "Promotional Products", "Video Production (Short & Long Form)"],
	},
	{
		title: "Search Engine Optimization",
		text: "SEO changes constantly. We focus on what works: technical fixes, strong content, and trusted links that deliver steady growth.",
		link: "/our-services/search-engine-optimization/",
		points: [
			"Technical SEO",
			"Content Writing & Optimization",
			"Content Strategy",
			"Google Business Profile Optimization",
			"Offsite SEO & Backlinks",
		],
	},
];

const values = ["Super-service", "Integrity", "Quality", "Relationships"];

const stats = [
	{
		number: "≤ 15min",
		title: "Average Response Time",
		text: "Most agencies take a day or more to reply. Even urgent requests can sit for hours. We average 15 minutes so you get quick answers when you need them.",
	},
	{
		number: "120%",
		title: "Increase in Website Traffic",
		text: "A Long Island fence company wasn't showing up when homeowners searched online. We rebuilt their SEO strategy and traffic more than doubled.",
	},
	{
		number: "150%",
		title: "Increase in Leads from Website",
		text: "An outdoor living company had a great showroom but an outdated site that wasn't converting. Their redesigned website now generates 150% more leads.",
	},
	{
		number: "233%",
		title: "Increase in Tour Requests",
		text: "A senior living community needed to reach families searching for care. In six months, tour requests rose 233% with web + local SEO improvements.",
	},
];

const plans = [
	{
		name: "Essential Launch",
		level: "Level One",
		text: "Best for startups and lean businesses looking for affordable marketing solutions.",
		points: [
			"Branded 5-7 page website",
			"Basic logo or brand identity",
			"Foundational SEO",
			"Social profile setup or refresh",
			"1-2 graphics/month",
		],
		next: "What's next? Look professional. Launch confidently. Get found.",
	},
	{
		name: "Growth Builder",
		level: "Level Two",
		text: "Best for businesses ready to scale and generate leads.",
		points: [
			"All benefits from the previous tier",
			"Semi-custom website focused on user experience",
			"Full SEO strategy & content creation",
			"Paid ad management for social + search",
			"Analytics dashboard with your own account manager",
		],
		next: "What's next? Grow awareness. Build momentum. Lead generation.",
	},
	{
		name: "Platinum Performance Partner",
		level: "Level Three",
		text: "Best for established businesses looking to scale rapidly and dominate their market.",
		points: [
			"All benefits from the previous tiers",
			"Fully custom website with complex integrations",
			"Enterprise SEO strategy + backlinking",
			"High-end creative and advanced media",
			"Priority support with senior strategy leadership",
		],
		next: "What's next? Scale intentionally. Convert consistently. Lead your market.",
	},
];

const clientLogos = [
	"Ocean Electric",
	"Irrigation Solutions",
	"Interstate",
	"The Hot Tub Factory",
	"Encore",
	"Aviva Senior Living",
	"Amendola's Fence Co.",
	"Hunter Business School",
];

const posts = await getCollection("blog");
posts.sort((a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf());
const featuredPosts = posts.slice(0, 3);
---

<BaseLayout
	title="Indigo Business Solutions | Digital Marketing Agency | Long Island, NY"
	description="Full-service marketing agency built on real relationships, fast turnaround, and results. We help businesses grow with tailored solutions and unmatched support."
>
	<div class="home">
		<section class="home__hero">
			<div class="home__shell home__hero-grid">
				<div class="home__hero-content">
					<h1 class="home__hero-title">Your Marketing <span>Partner</span>, Minus the Overhead</h1>
					<p>
						Business is challenging, and most marketing agencies make it harder with empty promises and inflated price tags. We keep things clear, transparent, and focused on your success.
					</p>
					<p>Five minutes: that's all it takes to see why we've been one of Long Island's top digital marketing agencies since 2006.</p>
					<div class="home__hero-actions">
						<a class="home__btn home__btn--ghost" href="/contact-us/">Free evaluation</a>
						<a class="home__text-link" href="/our-services/">Our services</a>
					</div>
				</div>
				<div class="home__hero-media" aria-hidden="true">
					<Picture 
						src={heroImg}
    					widths={[240, 540, 720, heroImg.width]} 
						height="100"						
						sizes={`(max-width: 100%) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${heroImg.width}px`}
  						alt="A descriptive description"
   						formats={['avif', 'webp']}
						alt="Indigo Business Solutions Office"
					 	class="home__hero-photo">
					 </Picture>
					<div class="imgBadge">Trusted by nearly 200 clients in 30+ states backed by 50+ five-star reviews.</div>
				</div>
			</div>
		</section>

		<section class="home__section">
			<div class="home__shell home__split">
				<div class="home__content">
					<p class="home__eyebrow">Marketing That Grows With You</p>
					<h2 class="home__h2">Marketing Services Built Around Your Business</h2>
					<p>Your business deserves better than cookie-cutter marketing. At Indigo, we deliver creative and digital support that fits your budget and goals.</p>
					<p>We start by learning your customers, what's working, and what's holding you back. Then we build strategies that scale.</p>
					<a class="home__btn" href="/our-services/">See all services</a>
				</div>
				<div class="home__collage" aria-hidden="true">
					<div class="home__chip">20+ Years Served</div>
					<div class="home__chip">30+ States Served</div>
					<div class="home__media home__media--top"></div>
					<div class="home__media home__media--bottom"></div>
					<div class="home__chip">15 Min Response Time</div>
					<div class="home__chip">5 Star Rating on Google</div>
				</div>
			</div>
		</section>

		<section class="home__section home__section--soft">
			<div class="home__shell home__cards">
				{
					services.map((service) => (
						<article class="home__service-card">
							<h3>{service.title}</h3>
							<p>{service.text}</p>
							<ul>
								{service.points.map((point) => <li>{point}</li>)}
							</ul>
							<a class="home__text-link" href={service.link}>Learn more</a>
						</article>
					))
				}
			</div>
		</section>

		<section class="home__section home__section--soft home__section--radius">
			<div class="home__shell home__split home__split--about">
				<div class="home__content">
					<p class="home__eyebrow">About Us</p>
					<h2 class="home__h2">Founded On Long Island In 2006, Still Here for Good Reason</h2>
					<p>We started Indigo after seeing too many agencies overpromise, underdeliver, and disappear when things got tough. We knew there had to be a better way.</p>
					<p>Since then, we've helped hundreds of companies across the USA from small businesses to established nationwide brands, all looking for a partner who listens.</p>
					<a class="home__btn" href="/about-us/">Our story</a>
				</div>
				<div class="home__about-visual" aria-hidden="true"></div>
			</div>
			<div class="home__shell home__values">
				<div>
					<h3 class="home__h3">What Drives Us Every Day</h3>
					<p>Marketing never stands still. New platforms appear, rules change, and AI keeps evolving. Our clients count on us as partners, not paychecks.</p>
				</div>
				<ul>
					{values.map((value) => <li>{value}</li>)}
				</ul>
			</div>
		</section>

		<section class="home__section home__section--soft">
			<div class="home__shell home__split">
				<div class="home__content">
					<p class="home__eyebrow">Most Agencies Sell Dreams. We Solve Problems.</p>
					<h2 class="home__h2">Why Work With Us</h2>
					<p>You've likely heard the pitches before: case studies that don't apply, promises to "10x your leads," and retainers that drain your budget. We don't work that way.</p>
					<ul class="home__checklist">
						<li>We start with your real problems, not our sales goals</li>
						<li>SEO and web design services built around your business</li>
						<li>Flexible marketing plans that work with your budget</li>
						<li>Marketing strategy consulting that fits your budget and timeline</li>
					</ul>
					<a class="home__btn" href="/about-us/">Learn more about our process</a>
				</div>
				<div class="home__why-visual" aria-hidden="true">
					<div class="home__why-badge">We help clients look better, reach farther, and grow with confidence.</div>
				</div>
			</div>
			<div class="home__shell home__stat-grid">
				{
					stats.map((stat) => (
						<article class="home__stat-card">
							<p class="home__stat-number">{stat.number}</p>
							<h3>{stat.title}</h3>
							<p>{stat.text}</p>
						</article>
					))
				}
			</div>
		</section>

		<section class="home__section">
			<div class="home__shell home__testimonial">
				<div class="home__google-mark">
					<img src="./src/icons/Indigo-Google-Reviews-01.svg" alt="Google Reviews Logo">
					<a href="/news-insights/">Read more of our 50+ five-star reviews</a>
				</div>
				<div>
					<p class="home__eyebrow home__eyebrow--light">Testimonials</p>
					<h2 class="home__h2 home__h2--light">Hear From Our Clients</h2>
					<p>
						I can't express enough gratitude to the Indigo team. Every person I've interacted with has been top-notch. Great company, great people, great work. I'm a very happy customer.
					</p>
					<p class="home__quote-name">Kristin - Business Owner</p>
					<p>Google Review</p>
				</div>
			</div>
		</section>

		<section class="home__section">
			<div class="home__shell">
				<h2 class="home__h2 home__h2--center">Meet Some of Our Clients</h2>
				<div class="home__logo-grid">
					{clientLogos.map((logo) => <p class="home__logo-item">{logo}</p>)}
				</div>
			</div>
		</section>

		<section class="home__section home__section--soft home__section--radius">
			<div class="home__shell home__plans-head">
				<p class="home__eyebrow">Marketing Service Options</p>
				<h2 class="home__h2 home__h2--center">Three levels, built for where you are right now</h2>
				<p class="home__center-text">
					Whether you're starting out, scaling up, or somewhere in between, we meet you where you are. Our three flexible levels match your needs and budget.
				</p>
			</div>
			<div class="home__shell home__plan-grid">
				{
					plans.map((plan) => (
						<article class="home__plan-card">
							<p class="home__plan-level">{plan.level}</p>
							<h3>{plan.name}</h3>
							<p>{plan.text}</p>
							<ul>
								{plan.points.map((point) => <li>{point}</li>)}
							</ul>
							<p class="home__plan-next">{plan.next}</p>
							<a class="home__btn" href="/contact-us/">Talk to our team</a>
						</article>
					))
				}
			</div>
			<div class="home__shell home__quiz-cta">
				<h3>Not sure where to start?</h3>
				<p>Take our 2-minute quiz and get a clear recommendation based on your challenges, budget, and goals.</p>
				<a class="home__btn" href="/marketing-quiz/">Take marketing quiz</a>
			</div>
		</section>

		<section class="home__section home__section--darkband">
			<div class="home__shell home__inner-cta">
				<h2 class="home__h2">What's next for your business? Let's find out <span>together.</span></h2>
				<p>Call us and we'll review your marketing, show you what's working, what's not, and how we'd move forward.</p>
				<a class="home__btn" href="/contact-us/">Talk to our team</a>
			</div>
		</section>

		<section class="home__section">
			<div class="home__shell home__blog-head">
				<p class="home__eyebrow">Insights To Grow Your Business</p>
				<h2 class="home__h2 home__h2--center">Marketing tips, strategies, and resources from our blog</h2>
				<p class="home__center-text">We've tried a lot over the years. Some things worked, some didn't. We write about both so you don't have to figure it out the hard way.</p>
			</div>
			<div class="home__shell home__blog-grid">
				{
					featuredPosts.map((post) => (
						<article class="home__blog-card">
							<a href={`/${post.id}/`} class="home__blog-image-link">
								<Picture src={post.data.image} alt={post.data.imageAlt} formats={["avif", "webp"]} quality={"mid"} />
							</a>
							<p class="home__blog-meta">{formatDate(post.data.date)}<br />{post.data.author}</p>
							<h3>
								<a href={`/${post.id}/`}>{post.data.title}</a>
							</h3>
							<a class="home__text-link" href={`/${post.id}/`}>Read more</a>
						</article>
					))
				}
			</div>
			<div class="home__shell home__blog-footer-link">
				<a class="home__btn" href="/news-insights/">See our full blog</a>
			</div>
		</section>

		<section class="home__section">
			<div class="home__shell home__contact-grid">
				<div class="home__contact-info">
					<p class="home__eyebrow">Contact Us</p>
					<h2 class="home__h2">Let's Chat</h2>
					<p>Give us a call. We'll listen, share how we'd help, and let you know if we're the right fit.</p>
					<ul>
						<li><strong>Location</strong><br />2150 Joshuas Path Suite 201, Hauppauge, NY 11788</li>
						<li><strong>Phone</strong><br /><a href="tel:+16316309845">(631) 630-9845</a></li>
						<li><strong>Business Hours</strong><br />Monday-Friday: 8:30 AM-6 PM<br />Saturday-Sunday: Closed</li>
					</ul>
				</div>
				<form class="home__contact-form" action="/contact-us/" method="get">
					<h3>Contact Form</h3>
					<label>Full Name*<input type="text" name="name" required /></label>
					<label>Email*<input type="email" name="email" required /></label>
					<label>Phone Number*<input type="tel" name="phone" required /></label>
					<label>Business Name*<input type="text" name="business" required /></label>
					<label>How can we help you?<textarea name="message" rows="4"></textarea></label>
					<button class="home__btn" type="submit">Send Message</button>
				</form>
			</div>
		</section>
	</div>
</BaseLayout>

<style lang="less">
	.home {
		--home-bg: #eff2f8;
		--home-surface: #ffffff;
		--home-surface-soft: #f5f7fc;
		--home-ink: #101f62;
		--home-text: #2f3747;
		--home-dark: #171f4c;
		--home-accent: #94cf3d;
		--home-border: #d7deef;
		--home-shadow: 0 24px 38px -32px rgba(11, 27, 74, 0.34);
		--home-radius-lg: clamp(1.8rem, 4vw, 3rem);
		--home-radius-md: clamp(1rem, 2vw, 1.5rem);
		--home-space-section: clamp(3.5rem, 8vw, 7rem);
		--home-space-stack: clamp(1rem, 2.4vw, 2rem);
		--home-fs-eyebrow: clamp(0.73rem, 0.8vw, 0.88rem);
		--home-fs-h1: clamp(2.3rem, 5.6vw, 5rem);
		--home-fs-h2: clamp(2rem, 4.2vw, 4rem);
		--home-fs-h3: clamp(1.5rem, 2.4vw, 2.1rem);
		--home-fs-body: clamp(1rem, 1.2vw, 1.35rem);

		background: var(--home-bg);
	}

	.home__shell {
		width: min(1260px, 92%);
		margin-inline: auto;
	}

	.home__section {
		padding-block: var(--home-space-section);
	}

	.home__section--soft {
		background: #e9edf6;
	}

	.home__section--radius {
		border-top-right-radius: clamp(2rem, 10vw, 12rem);
	}

	.home__eyebrow {
		font-size: var(--home-fs-eyebrow);
		letter-spacing: 0.25em;
		text-transform: uppercase;
		color: #5a6697;
		margin-bottom: 0.7rem;
		font-weight: 600;
	}

	.home__eyebrow--light {
		color: #9eb8ff;
	}

	.home__h2 {
		font-size: var(--home-fs-h2);
		line-height: 1.08;
		color: var(--home-ink);
		margin-bottom: 1rem;
	}

	.home__h2--light {
		color: #fff;
	}

	.home__h2--center {
		text-align: center;
	}

	.home p {
		font-size: var(--home-fs-body);
		line-height: 1.55;
		color: var(--home-text);
		margin-bottom: 1rem;
	}

	.home__btn {
		display: inline-flex;
		align-items: center;
		gap: 0.6rem;
		padding: clamp(0.74rem, 1.2vw, 1rem) clamp(1.3rem, 2vw, 2rem);
		border-radius: 999px;
		background: #0c1b67;
		color: #fff;
		text-decoration: none;
		font-weight: 600;
		font-size: clamp(1rem, 1vw, 1.15rem);
		border: 1px solid transparent;
		transition: background-color 0.2s ease, border-color 0.2s ease;
	}

	.home__btn::after {
		content: "›";
		font-size: 1.15em;
		line-height: 1;
	}

	.home__btn:hover {
		background: #08124a;
	}

	.home__btn--ghost {
		background: transparent;
		border-color: #d8dcf0;
	}

	.home__text-link {
		font-size: clamp(1rem, 1vw, 1.15rem);
		font-weight: 600;
		text-decoration: none;
		color: var(--home-accent);
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
	}

	.home__text-link::after {
		content: "›";
	}

	.home__hero {
		background-color: var(--brandNavy);
		background-image: url("/src/assets/images/Indigo-Right-Bottom-Corner.svg");
		background-size: cover, cover;
		background-repeat: no-repeat;
		padding: clamp(2.8rem, 6.2vw, 5.2rem) 0;
		border-bottom-left-radius: clamp(3rem, 14vw, 13rem);
	}

	.home__hero-grid {
		display: grid;
		gap: clamp(1.2rem, 2.8vw, 2.5rem);
		align-items: center;
		margin-top: 6rem;
		margin-bottom: 6rem;
	}

	.home__hero-title {
		font-size: var(--home-fs-h1);
		line-height: 1.02;
		color: #fff;
		margin-bottom: 1rem;
		max-width: 13ch;
	}

	.home__hero-title span {
		color: var(--home-accent);
	}

	.home__hero-content p {
		color: #ecf0ff;
		max-width: 59ch;
	}

	.home__hero-actions {
		display: flex;
		align-items: center;
		gap: 0.8rem;
		flex-wrap: wrap;
		margin-top: 1rem;
	}

	.home__hero-media {
		position: relative;
	}

	.home__hero-photo {
		width: 100%;
		height: auto;
		border-radius: 0px clamp(16px, 10vw, 192px) 0px clamp(16px, 10vw, 192px);
		background: linear-gradient(140deg, #a8d0ff 0%, #56628c 55%, #1f2744 100%);
		box-shadow: var(--home-shadow);
	}

	.home__hero-badge {
		position: absolute;
		left: -1rem;
		bottom: 0.7rem;
		background: #fff;
		border-radius: 2rem;
		padding: clamp(1rem, 1.7vw, 1.5rem);
		width: min(280px, 72%);
		font-size: clamp(1rem, 1vw, 1.15rem);
		line-height: 1.4;
		color: #1f2f55;
	}

	.home__split {
		display: grid;
		gap: clamp(1.5rem, 3vw, 3rem);
		align-items: center;
	}

	.home__content {
		max-width: 70ch;
	}

	.home__collage {
		display: grid;
		grid-template-columns: 0.9fr 1.1fr;
		gap: 0.8rem;
	}

	.home__chip,
	.home__media {
		border-radius: 1.1rem;
	}

	.home__chip {
		background: #041a6f;
		color: #9fde42;
		padding: 1rem;
		font-weight: 700;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		min-height: 6.25rem;
	}

	.home__media {
		min-height: 10rem;
		background: linear-gradient(150deg, #8fd2f1 0%, #b8d2ff 30%, #6e4a24 100%);
	}

	.home__media--top {
		border-top-right-radius: clamp(2rem, 6vw, 5rem);
	}

	.home__media--bottom {
		border-bottom-left-radius: clamp(2rem, 6vw, 5rem);
		grid-column: 1 / span 2;
		min-height: 14rem;
	}

	.home__cards {
		display: grid;
		gap: 1rem;
	}

		.home__service-card {
		display: flex; 
		flex-direction: column;
	}

	.home__service-card,
	.home__stat-card,
	.home__plan-card,
	.home__contact-form {
		background: var(--home-surface-soft);
		border: 1px solid var(--home-border);
		border-radius: var(--home-radius-lg);
		padding: clamp(1.2rem, 2.4vw, 2.1rem);
		box-shadow: var(--home-shadow);
	}

	.home__service-card h3,
	.home__stat-card h3,
	.home__plan-card h3,
	.home__contact-form h3,
	.home__values h3,
	.home__quiz-cta h3 {
		font-size: var(--home-fs-h3);
		line-height: 1.15;
		color: var(--home-ink);
		margin-bottom: 0.7rem;
	}

	.home__service-card ul,
	.home__plan-card ul,
	.home__checklist,
	.home__contact-info ul {
		list-style: none;
		padding: 0;
		margin: 1rem 0;
	}

	.home__service-card li,
	.home__plan-card li,
	.home__checklist li,
	.home__contact-info li {
		padding-left: 1.2rem;
		position: relative;
		margin-bottom: 0.45rem;
		font-size: clamp(0.96rem, 0.95vw, 1.1rem);
		line-height: 1.45;
		color: #2c3858;
	}

	.home__service-card li::before,
	.home__plan-card li::before,
	.home__checklist li::before {
		content: "›";
