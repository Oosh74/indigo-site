---
import BaseLayout from "@layouts/BaseLayout.astro";
import ContactSection from "@components/ContactSection/ContactSection.astro";
---

<BaseLayout
  title="Contact Us | Indigo Business Solutions"
  description="Talk with Indigo Business Solutions. Share your goals and we will provide honest guidance and practical next steps."
>
  <section class="hero">
    <div class="shell">
      <p class="crumb">Home Page / Contact Us</p>
      <h1>Contact Us</h1>
      <a href="/contact-us/" class="cta">Free evaluation</a>
    </div>
  </section>

  <ContactSection sectionClass="page-section" shellClass="page-shell" />
</BaseLayout>

<style lang="less">
  .shell {
    width: min(1120px, 94%);
    margin: 0 auto;
  }

  .section {
    padding: clamp(2.5rem, 6vw, 5rem) 0;
  }

  .hero {
    padding: clamp(5.6rem, 8vw, 8rem) 0 2.4rem;
    background: linear-gradient(160deg, #12183f 0%, #1e2868 56%, #344494 100%);
    border-bottom-left-radius: 3rem;
    border-bottom-right-radius: 3rem;
    color: #fff;
  }

  .crumb {
    font-size: 0.86rem;
    color: #c8cfee;
    margin-bottom: 0.6rem;
  }

  .hero h1 {
    color: #fff;
    font-size: clamp(2rem, 4.8vw, 3.2rem);
    line-height: 1.1;
    margin-bottom: 0.9rem;
  }

  .cta {
    display: inline-block;
    padding: 0.58rem 1.04rem;
    background: #fff;
    color: #1b245d;
    font-weight: 700;
    text-decoration: none;
    border-radius: 999px;
  }

</style>
