---
import BaseLayout from "@layouts/BaseLayout.astro";

const categories = [
	"Apparel",
	"Drinkware",
	"Bags",
	"Tech & Electronics",
	"Office & Writing",
	"Health & Wellness",
	"Outdoor & Leisure",
	"Fun & Games",
	"Awards & Recognition",
	"Trade Show Essentials",
	"Eco-Friendly Products",
	"Home & Kitchen",
];

const useCases = [
	"Client Appreciation Gifts",
	"Trade Show Giveaways",
	"Sales Team Incentives",
	"Holiday & Seasonal Promotions",
	"Community Fundraisers",
	"Grand Openings & Launch Events",
];

const industries = [
	{
		name: "Healthcare",
		text: "Hospitals, practices, and health organizations use promo items for events, education, and staff appreciation.",
		items: "Wellness kits, sanitizer bottles, branded scrubs",
	},
	{
		name: "Construction & Trade Services",
		text: "Contractors, electricians, plumbers, and HVAC companies use promo items to boost visibility and reward crews.",
		items: "Custom hard hats, safety vests, rugged drinkware, work gloves, toolkits",
	},
	{
		name: "Finance & Real Estate",
		text: "Banks, insurers, and real estate firms use promo items to strengthen relationships and stay top of mind.",
		items: "Engraved pens, notepads, calendars, keychains, welcome-home gift sets",
	},
	{
		name: "Nonprofits & Charities",
		text: "Community organizations use promo items to raise awareness, thank donors, and support events.",
		items: "Tote bags, wristbands, magnets, event shirts, reusable drinkware",
	},
	{
		name: "Tech & SaaS Companies",
		text: "Software firms and startups use promo items for recruiting, onboarding, and brand visibility.",
		items: "Wireless chargers, USB drives, hoodies, mouse pads, laptop sleeves, welcome kits",
	},
];
---

<BaseLayout
	title="Print & Promotional Products | Indigo Business Solutions"
	description="Branded promo products and custom print materials that keep your business top of mind. From apparel to tech, we handle sourcing, design, and delivery."
>
	<section class="hero">
		<div class="shell">
			<h1>Print & promotional products that get your brand noticed</h1>
			<p>
				From tote bags to client gifts, we turn everyday items into lasting marketing. We find the right products for events, team rewards, and brand buzz without the hassle.
			</p>
		</div>
	</section>

	<section class="shell section">
		<div class="two-col">
			<div class="card">
				<h2>Why promotional products work</h2>
				<p>
					People toss flyers and delete emails, but they keep useful items. A branded product stays with them for months, keeping your logo visible daily.
				</p>
				<p><strong>70% of consumers remember a brand better after receiving a promotional product.</strong></p>
			</div>
			<div class="card">
				<h2>Don’t know what to order? We’ll handle it</h2>
				<p>
					Tell us what you need promo items for and we’ll build a plan around your budget and goals. We handle research, sourcing, and logistics from start to finish.
				</p>
				<a href="/contact-us/">Shop now</a>
			</div>
		</div>
	</section>

	<section class="shell section">
		<div class="card">
			<h2>Promotional product use cases & ideas</h2>
			<p>We match the right product to the right moment so your brand stays memorable.</p>
			<ul class="list-grid">
				{useCases.map((item) => <li>{item}</li>)}
			</ul>
			<h3>Popular categories</h3>
			<ul class="list-grid">
				{categories.map((item) => <li>{item}</li>)}
			</ul>
		</div>
	</section>

	<section class="shell section">
		<div class="card">
			<h2>Explore by industry</h2>
			<div class="industry-grid">
				{
					industries.map((industry) => (
						<article>
							<h3>{industry.name}</h3>
							<p>{industry.text}</p>
							<p><strong>Popular items:</strong> {industry.items}</p>
						</article>
					))
				}
			</div>
		</div>
	</section>

	<section class="shell section testimonials">
		<h2>Hear From Our Clients</h2>
		<p>
			"I can’t express enough gratitude to the Indigo team. Great company, great people, great work. I’m a very happy customer."
		</p>
		<p class="quote-author">Kristin - Business Owner</p>
		<a href="/news-insights/">Read more of our 50+ five-star reviews</a>
	</section>

	<section class="contact">
		<div class="shell">
			<h2>Let’s Chat</h2>
			<p>Call us and we’ll review your marketing, show what is working, what is not, and how we would move forward.</p>
			<ul>
				<li><strong>Location:</strong> 2150 Joshuas Path Suite 201, Hauppauge, NY 11788</li>
				<li><strong>Phone:</strong> <a href="tel:+16316309845">(631) 630-9845</a></li>
			</ul>
			<a href="/contact-us/">Talk to our team</a>
		</div>
	</section>
</BaseLayout>

<style lang="less">
	.shell {
		width: min(1120px, 94%);
		margin: 0 auto;
	}

	.section {
		padding: clamp(2.5rem, 6vw, 5rem) 0;
	}

	.hero {
		padding: clamp(5.5rem, 8vw, 8rem) 0 2.8rem;
		background: linear-gradient(160deg, #12183f 0%, #1e2868 56%, #344494 100%);
		border-bottom-left-radius: 3rem;
		border-bottom-right-radius: 3rem;
		color: #fff;
	}

	.hero h1 {
		color: #fff;
		font-size: clamp(2rem, 4.8vw, 3.3rem);
		line-height: 1.1;
		margin-bottom: 1rem;
		max-width: 17ch;
	}

	.hero p {
		color: #d8ddf7;
		max-width: 65ch;
	}

	.two-col {
		display: grid;
		gap: 1rem;
	}

	.card {
		background: #f4f6fb;
		border: 1px solid #dce3f4;
		border-radius: 1rem;
		padding: 1.1rem;
	}

	h2 {
		font-size: clamp(1.5rem, 2.7vw, 2.2rem);
		margin-bottom: 0.8rem;
	}

	h3 {
		font-size: 1.1rem;
		margin: 0.9rem 0 0.5rem;
	}

	ul {
		padding-left: 1.2rem;
	}

	li {
		margin-bottom: 0.45rem;
	}

	.list-grid,
	.industry-grid {
		display: grid;
		gap: 0.8rem;
	}

	.industry-grid article {
		background: #fff;
		border: 1px solid #dce3f4;
		border-radius: 0.8rem;
		padding: 0.9rem;
	}

	.card a,
	.testimonials a,
	.contact a {
		color: var(--secondary);
		font-weight: 700;
		text-decoration: none;
	}

	.card a:hover,
	.testimonials a:hover,
	.contact a:hover {
		text-decoration: underline;
	}

	.quote-author {
		font-weight: 700;
	}

	.contact {
		background: #0f1538;
		color: #fff;
		padding: clamp(2.6rem, 6vw, 4rem) 0;
		border-top-left-radius: 2.5rem;
		border-top-right-radius: 2.5rem;
	}

	.contact h2 {
		color: #fff;
	}

	.contact p,
	.contact li {
		color: #d2d8f7;
	}

	@media only screen and (min-width: 64rem) {
		.two-col {
			grid-template-columns: repeat(2, minmax(0, 1fr));
		}

		.list-grid {
			grid-template-columns: repeat(2, minmax(0, 1fr));
		}

		.industry-grid {
			grid-template-columns: repeat(2, minmax(0, 1fr));
		}

		.card {
			padding: 1.5rem 1.7rem;
		}
	}
</style>
