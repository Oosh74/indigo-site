---
import BaseLayout from "@layouts/BaseLayout.astro";
import StatsGrid from "@components/StatsGrid/StatsGrid.astro";
import GoogleReviewsSlider from "@components/GoogleReviewsSlider/GoogleReviewsSlider.astro";
import GlobalCta from "@components/GlobalCta/GlobalCta.astro";

const foundations = [
  "Customer-first: Real relationships through relevant content and authentic replies",
  "Platform-smart: Focus on channels where your audience actually spends time",
  "Identity-driven: Voice and visuals matched to your brand",
  "Engagement-focused: Active interaction that builds trust over time",
];

const differentiators = [
  "Connection-driven content",
  "Organic and paid integration",
  "Clear process, real partnership",
  "Custom to your business",
  "Smart analytics and adjustments",
  "Right place, right platform",
];

const processSteps = [
  "Discovery and audience understanding",
  "Platform and content planning",
  "Content creation and approval",
  "Publishing and engagement",
  "Analytics, review and optimization",
];

const outcomes = [
  "Stronger engagement with real followers",
  "Recognizable brand identity everywhere you appear",
  "Consistent presence without the daily grind",
  "Content aligned with business goals",
  "Smart ad management when needed",
  "A team that knows your voice and audience",
  "Social and website strategies working together",
  "Reports that show real business impact",
];

const results = [
  {
    stat: "100%+",
    title: "Follower growth in a year",
    text: "A New York financial services firm grew from 11,961 to 24,000+ followers organically in one year.",
  },
  {
    stat: "2x+",
    title: "Growth in followers and engagement",
    text: "A Long Island agency doubled followers and significantly improved post engagement.",
  },
  {
    stat: "17%",
    title: "Increase in website traffic from Instagram",
    text: "A wellness brand used stories and teaser content to drive sustained monthly traffic growth.",
  },
  {
    stat: "50 to 1,200+",
    title: "Followers in one year",
    text: "A Southampton electrical company grew 24x through consistent engagement and authentic interaction.",
  },
];
---

<BaseLayout
  title="Social Media Management | Indigo Business Solutions"
  description="Show up where your customers scroll. Our social media strategies deliver consistent posts, smart ads, and real engagement that drive results."
>
  <section class="hero">
    <div class="shell">
      <h1>Social media management designed to connect and engage</h1>
      <p>
        Your customers spend hours scrolling every day. We help you show up
        authentically with content, ads, and engagement that build real
        relationships.
      </p>
    </div>
  </section>

  <section class="shell section">
    <div class="two-col">
      <div class="card">
        <h2>Make your business part of the conversation</h2>
        <p>
          People research on Instagram, check Facebook reviews, watch short-form
          videos, and ask in groups before buying. If you are not part of that
          conversation, someone else is.
        </p>
        <ul>
          {foundations.map((item) => <li>{item}</li>)}
        </ul>
      </div>
      <div class="card">
        <h2>We build presence and connection</h2>
        <p>
          Most agencies post and disappear. We combine strategy, creative, and
          engagement so social media supports brand trust and real business
          growth.
        </p>
        <ul>
          {differentiators.map((item) => <li>{item}</li>)}
        </ul>
        <a href="/contact-us/">Talk to our team</a>
      </div>
    </div>
  </section>

  <section class="process">
    <div class="shell">
      <h2>A clear and collaborative process</h2>
      <p>
        Social media can feel overwhelming. Our process keeps it structured and
        aligned with your goals.
      </p>
      <ol>
        {processSteps.map((step) => <li>{step}</li>)}
      </ol>
      <p class="subtle">
        We manage organic social content for 190+ Long Island brands.
      </p>
    </div>
  </section>

  <section class="shell section">
    <div class="two-col">
      <div class="card">
        <h2>Social Media Built for Long-Term Connections</h2>
        <p>
          Social media is not instant. It is an investment that grows through
          consistency. Presence builds recognition, and recognition builds
          trust.
        </p>
        <ul>
          {outcomes.map((item) => <li>{item}</li>)}
        </ul>
      </div>
      <div class="card">
        <h3>Results from current client campaigns</h3>
        <StatsGrid
          items={results.map((result) => ({
            number: result.stat,
            title: result.title,
            text: result.text,
          }))}
          containerClass="result-grid"
          metricClass="metric"
          titleTag="h4"
        />
      </div>
    </div>
  </section>

  <GoogleReviewsSlider sectionClass="page-section testimonials" shellClass="page-shell" />

  <GlobalCta
    title="Let's Chat"
    accent=""
    description="Call us and we'll review your marketing, show what is working, what is not, and how we would move forward."
    ctaLabel="Talk to our team"
    shellClass="page-shell"
  />
</BaseLayout>

<style lang="less">
  .shell {
    width: min(1120px, 94%);
    margin: 0 auto;
  }

  .section {
    padding: clamp(2.5rem, 6vw, 5rem) 0;
  }

  .hero {
    padding: clamp(5.5rem, 8vw, 8rem) 0 2.8rem;
    background: linear-gradient(160deg, #12183f 0%, #1e2868 56%, #344494 100%);
    border-bottom-left-radius: 3rem;
    border-bottom-right-radius: 3rem;
    color: #fff;
  }

  .hero h1 {
    color: #fff;
    font-size: clamp(2rem, 4.8vw, 3.3rem);
    line-height: 1.1;
    margin-bottom: 1rem;
    max-width: 18ch;
  }

  .hero p {
    color: #d8ddf7;
    max-width: 65ch;
  }

  .two-col {
    display: grid;
    gap: 1rem;
  }

  .card {
    background: #f4f6fb;
    border: 1px solid #dce3f4;
    border-radius: 1rem;
    padding: 1.1rem;
  }

  h2 {
    font-size: clamp(1.5rem, 2.7vw, 2.2rem);
    margin-bottom: 0.8rem;
  }

  h3 {
    font-size: 1.1rem;
    margin: 0.9rem 0 0.5rem;
  }

  h4 {
    font-size: 1rem;
    margin: 0.4rem 0 0.3rem;
  }

  ul,
  ol {
    padding-left: 1.2rem;
  }

  li {
    margin-bottom: 0.45rem;
  }

  .process {
    background: #131a45;
    color: #fff;
    padding: clamp(2.5rem, 6vw, 4rem) 0;
    border-top-left-radius: 2.5rem;
    border-top-right-radius: 2.5rem;
  }

  .process h2 {
    color: #fff;
  }

  .process p,
  .process li {
    color: #d2d8f7;
  }

  .subtle {
    margin-top: 0.8rem;
  }

  :global(.result-grid) {
    display: grid;
    gap: 0.8rem;
  }

  :global(.result-grid article) {
    background: #fff;
    border: 1px solid #dce3f4;
    border-radius: 0.8rem;
    padding: 0.85rem;
  }

  :global(.metric) {
    font-size: 1.55rem;
    font-weight: 900;
    color: var(--secondary);
    line-height: 1;
  }

  .card a {
    color: var(--secondary);
    font-weight: 700;
    text-decoration: none;
  }

  .card a:hover {
    text-decoration: underline;
  }
  @media only screen and (min-width: 64rem) {
    .two-col {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    :global(.result-grid) {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .card {
      padding: 1.5rem 1.7rem;
    }
  }
</style>
