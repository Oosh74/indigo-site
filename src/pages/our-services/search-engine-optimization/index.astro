---
import BaseLayout from "@layouts/BaseLayout.astro";
import StatsGrid from "@components/StatsGrid/StatsGrid.astro";
import GoogleReviewsSlider from "@components/GoogleReviewsSlider/GoogleReviewsSlider.astro";
import GlobalCta from "@components/GlobalCta/GlobalCta.astro";
import PageHero from "@components/PageHero/PageHero.astro";

const searchPlacements = [
  "Google top organic spots",
  "AI-generated overviews",
  "Featured snippets and People Also Ask",
  "Emerging AI-driven search platforms",
];

const processSteps = [
  "Discovery and goal setting",
  "Audience-driven keyword strategy",
  "Technical SEO and optimization",
  "Content strategy and creation",
  "Performance monitoring and proactive optimization",
  "Off-site SEO and local authority",
];

const deliverables = [
  "Keyword Research and Strategy",
  "On-Page SEO optimization",
  "Technical SEO audits and fixes",
  "Content strategy and publishing plans",
  "Link building and off-site SEO",
  "Local SEO for maps, listings, and reviews",
  "Ongoing reporting and monthly optimization",
];

const results = [
  {
    stat: "25+",
    title: "Top ranking keywords in 3 months",
    text: "A senior living facility reached page one for 25 keywords in three months after launch.",
  },
  {
    stat: "81%",
    title: "Growth in organic traffic",
    text: "A home care provider drove more than 150 qualified family inquiries in one quarter.",
  },
  {
    stat: "72%",
    title: "Average growth across clients",
    text: "SEO clients averaged 72% year-over-year growth through consistent optimization.",
  },
  {
    stat: "716+",
    title: "Conversions in one year",
    text: "A rehab facility generated 716 inquiries in one year with local SEO and content strategy.",
  },
];
---

<BaseLayout
  title="Search Engine Optimization | Indigo Business Solutions"
  description="SEO services that adapt to Google, AI, and voice search. We help your business rank higher, reach customers, and drive measurable growth."
>
  <PageHero
    title="SEO that performs no matter how people search"
    description="Search has changed from Google to voice to AI. Your business needs to show up wherever customers look for answers, and your strategy needs to adapt quickly."
    breadcrumbs={[
      { label: "Home Page", href: "/" },
      { label: "Our Services", href: "/our-services/" },
      { label: "Search Engine Optimization" },
    ]}
  />

  <section class="content-shell content-section">
    <div class="two-col">
      <div class="card">
        <h2>Strategic Optimization for a Changing Search Landscape</h2>
        <p>
          Buying decisions still start with search, but results now include AI
          overviews, answer boxes, and no-click results. We help you stay
          visible where decisions happen.
        </p>
        <ul>
          {searchPlacements.map((item) => <li>{item}</li>)}
        </ul>
        <p>
          <strong
            >75% of users never hit page two. We build to keep you on page one.</strong>
        </p>
      </div>
      <div class="card">
        <h2>What Sets Our SEO Apart</h2>
        <p>
          Most agencies stop at keywords. We track how Google and AI systems
          actually choose content, then build strategy around what earns
          visibility and conversions.
        </p>
        <p>
          Built for performance and sustainable growth with proactive
          adjustments as search behavior evolves.
        </p>
      </div>
    </div>
  </section>

  <section class="process">
    <div class="content-shell">
      <h2>Your SEO Strategy, Built for Real Results</h2>
      <p>How we work:</p>
      <ol>
        {processSteps.map((step) => <li>{step}</li>)}
      </ol>
      <p class="subtle">
        The goal is not just rankings, it is qualified traffic and measurable
        business outcomes.
      </p>
    </div>
  </section>

  <section class="content-shell content-section">
    <div class="two-col">
      <div class="card">
        <h2>SEO services designed to get you found</h2>
        <p>What you can expect from a long-term SEO partnership:</p>
        <ul>
          <li>More organic traffic that converts</li>
          <li>Visibility in AI results and snippets</li>
          <li>Higher conversion rates</li>
          <li>Stronger authority than competitors</li>
          <li>Clear monthly reporting</li>
        </ul>
      </div>
      <div class="card">
        <h3>What We Deliver</h3>
        <ul>
          {deliverables.map((item) => <li>{item}</li>)}
        </ul>
      </div>
    </div>
  </section>

  <section class="content-shell content-section">
    <div class="card">
      <h2>Results from recent SEO campaigns</h2>
      <StatsGrid
        items={results.map((item) => ({
          number: item.stat,
          title: item.title,
          text: item.text,
        }))}
        containerClass="result-grid"
        metricClass="metric"
      />
    </div>
  </section>

  <GoogleReviewsSlider sectionClass="page-section testimonials" shellClass="page-shell" />

  <GlobalCta
    title="Let's Chat"
    accent=""
    description="Call us and we'll review your marketing, show what is working, what is not, and how we would move forward."
    ctaLabel="Talk to our team"
    shellClass="page-shell"
  />
</BaseLayout>

<style lang="less">
  .two-col {
    display: grid;
    gap: 1rem;
  }

  .card {
    background: #f4f6fb;
    border: 1px solid #dce3f4;
    border-radius: 1rem;
    padding: 1.1rem;
  }

  h2 {
    font-size: clamp(1.5rem, 2.7vw, 2.2rem);
    margin-bottom: 0.8rem;
  }

  h3 {
    font-size: 1.1rem;
    margin: 0.9rem 0 0.5rem;
  }

  ul,
  ol {
    padding-left: 1.2rem;
  }

  li {
    margin-bottom: 0.45rem;
  }

  .process {
    background: #131a45;
    color: #fff;
    padding: clamp(2.5rem, 6vw, 4rem) 0;
    border-top-left-radius: 2.5rem;
    border-top-right-radius: 2.5rem;
  }

  .process h2 {
    color: #fff;
  }

  .process p,
  .process li {
    color: #d2d8f7;
  }

  .subtle {
    margin-top: 0.8rem;
  }

  :global(.result-grid) {
    display: grid;
    gap: 0.9rem;
    margin-top: 1rem;
  }

  :global(.result-grid article) {
    background: #fff;
    border: 1px solid #dce3f4;
    border-radius: 0.8rem;
    padding: 0.9rem;
  }

  :global(.metric) {
    font-size: 1.8rem;
    font-weight: 900;
    color: var(--secondary);
    line-height: 1;
    margin-bottom: 0.3rem;
  }
  @media only screen and (min-width: 64rem) {
    .two-col {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    :global(.result-grid) {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .card {
      padding: 1.5rem 1.7rem;
    }
  }
</style>
